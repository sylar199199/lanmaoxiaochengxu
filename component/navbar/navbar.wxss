/* components/navbar/index.wxss */
.headIcon{
  height: 30rpx;
  width: 30rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 5px;
  background: #fff;
  border-radius: 50%;
  padding: 10rpx;
  margin-left: -8rpx;
}
.headText{
  display: inline-block;
  vertical-align: middle;
}
.navbar {
  width: 100%;
  overflow: hidden;
  position: fixed;
  background:#fff;
  top: 0;
  left: 0;
  z-index: 1005;
  flex-shrink: 0;
}
.navbar-title {
  width: 100%;
  box-sizing: border-box;
  padding-left: 115px;
  padding-right: 115px;
  height: 32px;
  line-height: 32px;
  text-align: center;
  position: absolute;
  left: 0;
  z-index: 10;
  color: #333;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.navbar-action-wrap {
  color: #000;
  font-size: 12px;
  display: -webkit-flex;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  -webkit-align-items: center;
  align-items: center;
  position: absolute;
  left: 0px;
  z-index: 11;
  line-height: 1;
  padding-top: 4px;
  padding-bottom: 4px;
}
.showCount{
 margin: 0 auto;
 padding: 10rpx;
}
.navbar-action-group {
  text-align: center;
  border-radius: 0 40rpx 40rpx 0;
  overflow: hidden;
  height: 25px;
  min-width: 105px;
}
.navbar-action_item {
  padding: 3px 0;
  color: #333;
}
.navbar-action-group .navbar-action_item {
  border-right: 1px solid #f0f0f0;
  padding: 3px 14px;
}

.navbar-action-group .last {
  border-right: none;
}