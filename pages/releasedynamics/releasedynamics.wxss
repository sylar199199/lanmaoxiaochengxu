 /* 弹框 */
 .zhezhao {
    position: fixed;
    width: 100%;
    height: 100%;
    top: 0px;
    background: rgba(0, 0, 0, 0.4);
    overflow: hidden;
}
 .closePop {
    animation: mylast;
    animation-duration: 1s;
    animation-iteration-count: 1;
    animation-fill-mode: forwards;
    width: 750rpx;
    height: 860rpx;
    border: 2rpx solid #ededed;
    position: absolute;
    bottom: 0;
    left: 0;
    z-index: 1454;
    background-color: #fff;
}
.popContent {
  overflow: auto;
  max-height: 460rpx;
  margin-top: 30rpx
}
.closeIcon {
  height: 60rpx;
  width: 60rpx;
  position: absolute;
  right: 2rpx;
  top: -26rpx;
}



.openPop {
  animation: myfirst;
  animation-duration: 0.5s;
  animation-iteration-count: 1;
  animation-fill-mode: forwards;
  width: 750rpx;
  height: 460rpx;
  border: 2rpx solid #ededed;
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 1454;
  background-color: #fff;
}
@keyframes myfirst {
  from {
    transform: translateY(533rpx);
  }

  to {
    transform: translateY(0rpx);
  }
}

