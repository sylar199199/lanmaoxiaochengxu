/* pages/activitylist/activitylist.wxss */
.activiList{
  background: #FCFDFD;
  min-height: 100%;
  margin-bottom: 60rpx;
  padding-bottom:42rpx;
}
.productList{
  padding: 42rpx 34rpx 0;
}
.priceNumber{
  max-width: 160rpx;
}
.titleBox{
  margin-bottom: 20rpx;
}
.borderTime{
  background: #e4e6e9;
  border-radius: 5rpx;
  display: inline-block;
  height: 32rpx;
  min-width: 32rpx;
  text-align: center;
  line-height: 32rpx;
}
.timeText{
  color: #363636;
  margin: 0 6rpx;
}
.productBox{
  flex-wrap: wrap;
}
.imgUrl{
  width: 100%;
  height: 326rpx;
  border: 0;
  vertical-align: top;
  vertical-align: text-top;
  vertical-align: bottom;
  vertical-align: text-bottom;
  display: block;
  border-radius: 15rpx 15rpx 0 0;
}
.productInfoBox{
  margin-bottom: 20rpx;
  width: 328rpx;
}
.stockText{
  margin-top: 46rpx;
}
.productImg{
  border: 1rpx solid #dcdcdc;
  border-radius: 15rpx;
  position: relative;
}
.dialogBox{
  position: absolute;
  width: 326rpx;
  height: 326rpx;
  background: rgba(0,0,0,0.52);
  border-radius: 15rpx 15rpx 0 0;
  text-align: center;
}
.dialogImg{
  width: 168rpx;
  height: 168rpx;
  margin: 79rpx auto;
}
.productBox .productInfoBox:nth-child(2n-1){
  margin-right: 20rpx;
}
.productName{
  margin: 20rpx 10rpx 0;
  line-height: 48rpx;
  height: 100rpx;
  position: relative;
}
.positionText{
  position: absolute;
  right: 10rpx;
  top: 8rpx;
}
.productName .name{
  max-width: 198rpx;
  line-height: 48rpx;
}
.percent{
  text-align: center;
  border-radius: 20px;
  width: 290rpx;
  height: 18rpx;
  line-height: 18rpx;
  border: 1px solid #efefef;
  background: #efefef;
  margin: 6px 10rpx 20rpx;
  font-size: 20rpx;
  position: relative;
}
.aaa{
  width: 73rpx;
  height: 77rpx;
  filter: grayscale(1);
}
.percentNumber{
  background: -webkit-linear-gradient(0deg, #f6e1b0, #f3bacc);
  border-radius: 20px;
  text-align: center;
  position:absolute;
  top: 0;
}
.percentText{
  position:absolute;
  z-index: 100;
  width: 100%;
}
.priceBox{
  margin: 25rpx 10rpx;
}
.gouqiIcon{
  width: 16rpx;
  height: 24rpx;
  display: inline-block;
  vertical-align: middle;
  margin-right: 4rpx;
}
.markPrice{
  text-decoration: line-through;
  text-align: left;
  margin-top: 6rpx;
}
.buybutton{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  width: 133rpx;
  background: #f24e43;
  color: #fff;
  border-radius: 30rpx;
  margin-top: -10rpx;
}
.greybuybutton{
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  width: 133rpx;
  background: #b4b2b1;
  color: #fff;
  border-radius: 30rpx;
  margin-top: -10rpx;
}


.color999{
  color: #999;
}
.userRegDaysLimitbox{
  margin-top: 25rpx;
  position: absolute;
  color: #fff;
  background: #f24e43;
  font-size: 26rpx;
  height: 50rpx;
  width: 130rpx;
  line-height: 50rpx;
  padding-left: 14rpx;
  z-index: 100;
  border-radius: 0 25rpx 25rpx 0;
}

